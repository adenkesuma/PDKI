// schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL") // uses connection pooling
  // directUrl = env("DATABASE_URL_NON_POOLING") // uses a direct connection
  // shadowDatabaseUrl = env("DATABASE_URL_NON_POOLING") // used for migrations
}

model News {
  id        Int     @unique @default(autoincrement()) @id
  title     String
  content   String
  description   String?
  publishedDate    DateTime
  image     String?
  video     String?
  tags      String?
  category  String?
  published Boolean    @default(false)
  @@map(name: "news")
}

model Member {
  id        Int     @unique @default(autoincrement())  @id
  nama      String
  namaSertifikat    String @map(name: "nama_sertifikat")
  subspesialisasi   String 
  asalInstitusi String  @map(name: "asal_institusi")
  pasFoto   String  @map(name: "pas_foto")
  noSeri    String  @unique @map(name: "no_seri")
  noSerkom  String  @unique @map(name: "no_serkom")
  tempatLahir   String @map(name: "tempat_lahir")
  tanggalLahir  DateTime? @default(now()) @map(name: "tanggal_lahir")
  noIdi     String  @unique @map(name: "no_idi")
  npaPdki   String  @unique @map(name: "npa_pdki")
  createdAt     DateTime?  @default(now()) @map(name: "created_at")
  updatedAt     DateTime?  @updatedAt @map(name: "updated_at")
  @@map(name: "member")
}

model Video {
  id         Int       @default(autoincrement()) @id
  title      String
  description    String
  duration  String
  videoUrl  String
  thubmnailUrl  String?
  harga String?
  publishedDate DateTime
  category  String
  tags String
  views String
  instructor String?
  @@map(name: "video")
}